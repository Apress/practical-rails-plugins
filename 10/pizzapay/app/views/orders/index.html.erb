<% content_for(:head) do -%>
  <meta http-equiv="refresh" content="30"/>
<% end -%>

<table border="1" cellpadding="5">
  <tr><th>Number</th><th>Customer Name</th><th>Address</th><th>Phone</th>
      <th>Order Summary</th><th>Ordered At</th></tr>
  <% @orders.each do |order| -%>
    <tr>
      <td><%= h(order.reference_number) %></td>
      <td><%= h(order.customer_name) %></td>
      <td><%= h(order.customer_address) %>, <%= h(order.customer_city) %></td>
      <td><%= h(order.customer_phone) %></td>
      <td><%= order.summary.join('<br />') %></td>
      <td><%= order.created_at.strftime("%r") %></td>
    </tr>
  <% end -%>
</table>
